
include-file = $HOME/.config/polybar/colors.ini
include-file = $HOME/.config/polybar/modules/xworkspaces.ini
include-file = $HOME/.config/polybar/modules/xwindow.ini
include-file = $HOME/.config/polybar/modules/filesystem.ini
include-file = $HOME/.config/polybar/modules/pulseaudio.ini
include-file = $HOME/.config/polybar/modules/volume.ini
include-file = $HOME/.config/polybar/modules/xkeyboard.ini
include-file = $HOME/.config/polybar/modules/memory.ini
include-file = $HOME/.config/polybar/modules/date.ini
include-file = $HOME/.config/polybar/modules/internal.ini
include-file = $HOME/.config/polybar/modules/time.ini
include-file = $HOME/.config/polybar/modules/wlan.ini


[bar/toph]
monitor = ${env:MONITOR:}
width = 100%
height = 20pt
radius = 0
background = ${colors.background}
foreground = ${colors.foreground}
bottom = false
line-size = 8pt
border-size = 2pt
border-color = #00000000
padding-left = 2
padding-right = 2
module-margin = 1
separator = |
separator-foreground = ${colors.accent}
modules-left = time date xwindow
modules-center = xworkspaces 
modules-right = memory alsa  bluetooth battery  powermenu
cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true
font-0 = JetBrainsMono Nerd Font:style=Bold:pixelsize=13;5
font-1 = Noto Sans CJK JP:style=Regular:pixelsize=13;5   
font-2 = JetBrainsMono Nerd Font:size=18;7
font-3 = unifont:fontformat=truetype:size=13:antialias=true;2
dpi = 140

[module/systray]
type = internal/tray
format-margin = 8pt
tray-spacing = 16pt

[settings]
screenchange-reload = true
compositing-background = source
compositing-overline = over
compositing-underline = over
compositing-foreground = over
compositing-border = over
pseudo-transparency = true


